<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login" >

    <Button
        android:id="@+id/ProceedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/PasswordType"
        android:layout_alignEnd="@+id/PasswordType"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <Button
        android:text="Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CheckButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/PasswordCheck"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_alignBaseline="@+id/CheckButton"
        android:layout_alignBottom="@+id/CheckButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordType"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/Clock_Button4"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/PasswordType"
        android:layout_toStartOf="@+id/PasswordType" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/Clock_Button3"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/Clock_Button4"
        android:layout_toStartOf="@+id/Clock_Button4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/Clock_Button2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/Clock_Button3"
        android:layout_toStartOf="@+id/Clock_Button3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/Clock_Button1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/Clock_Button2"
        android:layout_toStartOf="@+id/Clock_Button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/CurrentPassword"
        android:textSize="16sp"
        android:layout_above="@+id/Login_Clock1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TimePicker
        android:id="@+id/Login_Clock4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:headerBackground="@android:color/holo_purple" />

    <TimePicker
        android:id="@+id/Login_Clock3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:headerBackground="@android:color/holo_purple" />

    <TimePicker
        android:id="@+id/Login_Clock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:headerBackground="@android:color/holo_purple" />

    <TimePicker
        android:id="@+id/Login_Clock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:headerBackground="@android:color/holo_purple" />

</RelativeLayout>